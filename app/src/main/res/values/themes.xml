<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Button_Primary" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">48dp</item>
        <item name="fontFamily">@font/bold700</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="heading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/bold700</item>
    </style>

    <style name="normal" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#363D4E</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/normal400</item>
    </style>

    <style name="tittle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/medium500</item>
    </style>

    <style name="BottomNavigationView.Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/normal400</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/normal400</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/text_color_primary</item>
    </style>

    <style name="MyCustomTabAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg_2</item>
    </style>

    <style name="PinEditTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:minEms">2</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="SpinnerThemeNormalDropdownArrow" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_spinner_normal_dropdown_arrow</item>
        <item name="android:minHeight">@dimen/_18sdp</item>
    </style>
    <style name="InputTitleTheme" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:paddingStart">@dimen/_3sdp</item>
        <item name="android:paddingEnd">@dimen/_3sdp</item>
        <item name="android:textColor">@color/midGrey</item>
    </style>
    <style name="ValueTheme" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_3sdp</item>
        <item name="android:paddingStart">@dimen/_3sdp</item>
        <item name="android:paddingEnd">@dimen/_3sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/liteGrey</item>
    </style>
</resources>