<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/check_in_layout_bg"
            android:clipToPadding="true"
            android:paddingTop="16dp"
            android:backgroundTint="@color/quantum_grey100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"

                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <ScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputLayout

                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textColorHint="@color/hintLabel"
                                app:boxBackgroundColor="@color/white"
                                app:boxCornerRadiusBottomEnd="@dimen/_7sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_7sdp"
                                app:boxCornerRadiusTopEnd="@dimen/_7sdp"
                                app:boxCornerRadiusTopStart="@dimen/_7sdp"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                app:hintTextColor="@color/hintLabel">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="Early Going"
                                    android:paddingTop="@dimen/_22sdp"
                                    android:textColor="@color/darKText"
                                    android:textColorHint="@color/hintColor" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">



                                <TextView
                                    android:id="@+id/selectdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="44dp"

                                    android:drawableLeft="@drawable/ic_calander"
                                    android:drawableTint="@color/black"
                                    android:hint="Select Date"
                                    android:drawablePadding="6dp"
                                    android:fontFamily="@font/medium500"
                                    android:gravity="center_vertical"
                                    android:paddingStart="16dp"
                                    android:paddingTop="8dp"
                                    android:paddingEnd="16dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/selecteddateerror"
                                    style="@style/InputTitleTheme"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="This field is required"
                                    android:textColor="@color/text_color_red"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                app:cardBackgroundColor="@color/white"


                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:background="@drawable/border_grey"
                                    android:orientation="vertical">
                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/categoryerror"
                                        style="@style/InputTitleTheme"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="This field is required"
                                        android:textColor="@color/text_color_red"
                                        tools:ignore="HardcodedText" />

                                    <LinearLayout
                                        android:id="@+id/creditlayout"
                                        android:visibility="gone"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            style="@style/InputTitleTheme"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="Credit Balance: "
                                            tools:ignore="HardcodedText" />
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/timeduration"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:fontFamily="@font/roboto_medium"

                                            android:textSize="@dimen/_12ssp" />

                                    </LinearLayout>


                                    <TextView
                                        style="@style/InputTitleTheme"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="Time Duration"
                                        tools:ignore="HardcodedText" />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:weightSum="2">
                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">
                                            <TextView
                                                style="@style/InputTitleTheme"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:maxLines="1"
                                                android:textColor="@color/black"
                                                android:text=" In Hours"
                                                tools:ignore="HardcodedText" />
                                            <technology.innovate.haziremployee.utility.DynamicWidthSpinner
                                                android:id="@+id/categoryspinner"
                                                style="@style/SpinnerThemeNormalDropdownArrow"
                                                android:layout_width="match_parent"
                                                android:minHeight="@dimen/_25sdp"


                                                android:layout_height="wrap_content"
                                                android:spinnerMode="dropdown" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/minuteslayout"
                                            android:gravity="center"
                                            android:padding="@dimen/_5sdp"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">
                                            <TextView
                                                style="@style/InputTitleTheme"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:maxLines="1"
                                                android:textColor="@color/black"
                                                android:text="In Minutes"
                                                tools:ignore="HardcodedText" />
                                            <technology.innovate.haziremployee.utility.DynamicWidthSpinner
                                                android:id="@+id/minutesspinner"
                                                style="@style/SpinnerThemeNormalDropdownArrow"
                                                android:layout_width="match_parent"
                                                android:minHeight="@dimen/_25sdp"

                                                android:layout_height="wrap_content"
                                                android:spinnerMode="dropdown" />
                                        </LinearLayout>
                                    </LinearLayout>




                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/designationerror"
                                        style="@style/InputTitleTheme"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="This field is required"
                                        android:textColor="@color/text_color_red"
                                        tools:ignore="HardcodedText" />



                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                            <com.google.android.material.textfield.TextInputLayout

                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:textColorHint="@color/hintLabel"
                                app:boxBackgroundColor="@color/white"
                                app:boxCornerRadiusBottomEnd="@dimen/_7sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_7sdp"
                                app:boxCornerRadiusTopEnd="@dimen/_7sdp"
                                app:boxCornerRadiusTopStart="@dimen/_7sdp"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                app:hintTextColor="@color/hintLabel">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/reason"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="Reason"
                                    android:inputType="textPersonName"
                                    android:paddingTop="@dimen/_22sdp"
                                    android:textColor="@color/darKText"
                                    android:textColorHint="@color/hintColor" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.cardview.widget.CardView>

                        <com.google.android.material.button.MaterialButton

                            android:id="@+id/submitMaterialButton"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:text="@string/apply"
                            android:textAllCaps="false"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/colorSecondary"
                            app:cornerRadius="@dimen/_7sdp" />







                    </LinearLayout>
                </ScrollView>
            </LinearLayout>



            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <include
                android:id="@+id/error_layout"
                layout="@layout/error_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </RelativeLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>